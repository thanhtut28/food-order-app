{
   "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "lib": ["esnext"],
      "strict": true,
      "rootDir": ".",
      "outDir": "dist",
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false
   },
   "include": ["prisma/*.ts", "src/**/*"]
}
